<h1>Perfil profissional</h1>

<% if @user_profile.errors.any? then %>
  <% @user_profile.errors.full_messages.each do |error| %>
    <%= error %></br>
  <% end %>
<% end %>

<%= form_with model: UserProfile.new do |f| %>
  <div>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :social_name, 'Nome social' %>
    <%= f.text_field :social_name %>
  </div>
  <div>
    <%= f.label :birth_date, 'Nascimento' %>
    <%= f.date_field :birth_date %>
  </div>
  <%if current_user.role == 'hireable' then%>
    <div>
      <%= f.label :major, 'Formação' %>
      <%= f.text_field :major %>
    </div>
    <div>
      <%= f.label :bio, 'Descrição' %>
      <%= f.text_field :bio %>
    </div>
    <div>
      <%= f.label :experience, 'Experiência' %>
      <%= f.text_field :experience %>
    </div>
  <%end%>
  <div>
    <%= f.label :picture, 'Foto [link]' %>
    <%= f.text_field :picture %>
  </div>
  <%= f.submit 'Enviar' %>

<%end%>
