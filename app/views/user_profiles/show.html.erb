<% u = @user_profile %>
<h1><%=u.social_name%></h1>

<div id=leftbox>
  Nome: <%= u.social_name %><br>
  Nome conforme documentos: <%= u.name %><br>
  <%if u.user.role == 'hireable' then%>
    Descrição: <%= u.bio%><br>
    Formação: <%= u.major%><br>
    Expriência: <%= u.experience%><br>
  <%end%>
  Nascimento: <%= u.birth_date%><br>
  Contato: <%= u.user.email %><br>
  Nota: <\em construção>

  <% if current_user == @user_profile then %>
  <%# elsif current_user.role == 'hirer' then %>
    <%#= f.label :favourite, 'Profissional favorito' %>
    <%#= f.check_box :favourite %>
    <!-- coisas de favorito ainda sem tabela, fazer depois que tiver perfil pra hirer também -->
  <%end%>
</div>
<div id=rightbox>
  <img src="<%= u.picture%>"><br>
  <%if u.id == current_user.id %>
    <p><%=link_to 'Modificar meu perfil', edit_user_profile_path(current_user.user_profile) %></p>
  <%end%>
</div>

<div>

<%if u.user.role == 'hireable' then%>
  Projetos anteriores: <br>
  <% u.user.proposal.each do |up| %>
    <% if up.project.status == 'encerrado' then %>
      <li><%= link_to up.project.title, project_path(up.id) %></li>
    <%end%>
  <%end%>
<%end%>
